# Use wdisplays to set up displays once, then
# use swaymsg -g get_outputs

output "Ancor Communications Inc BE249 K8LMQS150300" alias $schreibtisch-links
output "Lenovo Group Limited T24i-2L VNA7WF21" alias $schreibtisch-rechts
output "Panasonic Industry Company Panasonic-TV 0x01010101" alias $fernseher-home

output eDP-1 scale 1.5

profile laptop {
    output eDP-1 enable
}

profile desk {
    output $schreibtisch-links mode 1920x1080 position 0,0
    output $schreibtisch-rechts mode 1920x1080 position 1920,0
    output eDP-1 disable
    exec swaymsg "workspace 2:web, move workspace to output 'Ancor Communications Inc BE249 K8LMQS150300'"
    exec swaymsg "workspace 3:dev, move workspace to output 'Lenovo Group Limited T24i-2L VNA7WF21'"
    exec swaymsg "workspace 4:mail, move workspace to output 'Lenovo Group Limited T24i-2L VNA7WF21'"
    exec swaymsg "workspace 5:im, move workspace to output 'Lenovo Group Limited T24i-2L VNA7WF21'"
    exec swaymsg "workspace 6:rand, move workspace to output 'Lenovo Group Limited T24i-2L VNA7WF21'"
    exec swaymsg "workspace 1:term, move workspace to output 'Ancor Communications Inc BE249 K8LMQS150300'"
}

profile fernseher {
    output $fernseher-home mode 1920x1080 position 0,0
    output eDP-1 enable position 1920,0
    exec swaymsg "workspace 3:dev, move workspace to output 'Panasonic Industry Company Panasonic-TV 0x01010101'"
}
