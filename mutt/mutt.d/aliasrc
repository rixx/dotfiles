## Alias config
set alias_file = ~/.mutt/aliases     # Here is the address book
set alias_format = "%4n %2f %t %-10a   %r"
                                     # %a alias name
                                     # %f flags (d for deleted)
                                     # %n index number
                                     # %r address to be expanded to
                                     # %t flag to display entry is marked for inclusion
set reverse_alias=yes
