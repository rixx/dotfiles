[user]
    name = Tobias Kunze
	email = r@rixx.de

[alias]
    # Shorter commands
    a = add -p
    amend = commit --amend
    br = branch
    c = commit -v
    co = checkout
    d = diff
    st = status --sort --branch

    # Easier commands
	ls-untracked = ls-files --others --exclude-standard
	pushf = push --force-with-lease
    aliases = "config --get-regexp alias"
    ca = commit --all -v
    delete-remote = push --delete origin
    ls-tracked = ls-tree
    rehead = reset --hard @
    uncommit = reset --sort @~1
    unstage = reset @ --

    # Logging
    lg = log --graph --all --pretty=format:'%C(yellow)%<|(14)%h%Creset %<|(80,trunc)%s  %Cgreen%<(15,trunc)%cr %C(bold blue)%<(20,trunc)%an%Creset %C(red)%D%Creset'
    lgg = log --graph --pretty=format:'%C(yellow)%<|(14)%h%Creset %<|(80,trunc)%s  %Cgreen%<(15,trunc)%cr %C(bold blue)%<(20,trunc)%an%Creset %C(red)%D%Creset'

    # Function aliases
    branches = "!f() { git branch "$@" --sort=authordate --color=always --format='%(if)%(HEAD)%(then)%(color:red) * %(else)   %(end)%(color:bold black)%(refname:short)|%(color:nobold yellow)%(objectname:short)|%(color:default)%(subject)|%(color:nobold green)%(committerdate:relative)|%(color:bold blue)%(authorname)' | column -s '|' -t; }; f"
    go = "!f() { git checkout -b "$1" 2> /dev/null || git checkout "$1"; }; f"  # go to branch, create if it does not exist
    pushall = "!f() { git remote | xargs -L1 git push "$@"; }; f"

[checkout]
    workers = 0

[color]
	ui = true

[commit]
    verbose = 1

[core]
	excludesfile = /home/rixx/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX

[add.interactive]
    # Bug(?) in git 2.37.0 when using diff-so-fancy
    useBuiltin = false

[credential]
	helper = cache

[gpg]
	program = gpg2

[help]
    autocorrect = 1

[init]
	defaultBranch = main

[pull]
    rebase = true

[push]
	default = current
	autoSetupRemote = true

[rebase]
	autoSquash = true
	autoStash = true
	missingCommitsCheck = warn

[submodule]
    stickyRecursiveClone = true
    fetchJobs = 4

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 3
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[diff-so-fancy]
	markEmptyLines = false
[maintenance]
	repo = /home/rixx/.config/dotfiles
[advice]
	statusHints = false
