#!/usr/bin/env bash
set -e

kill -SIGUSR1 $(pidof dunst)
i3lock \
        -t -i $(find ~/lib/pics/wallpapers/processed | shuf -n1) \
        --time-pos='x+110:h-70' \
        --date-pos='x+43:h-45' \
        --clock --date-align 1 --date-str "Und Sie sind?" \
        --inside-color=00000000 --ring-color=ffffffff --line-uses-inside \
        --keyhl-color=007171ff --bshl-color=007171ff --separator-color=00000000 \
        --insidever-color=00000000 --insidewrong-color=d23c3dff \
        --ringver-color=ffffffff --ringwrong-color=ffffffff --ind-pos='x+280:h-70' \
        --radius=20 --ring-width=4 --verif-text='' --wrong-text='Nochmaaal!' \
        --verif-color=ffffffff --time-color=ffffffff --date-color=ffffffff \
        --noinput-text='' --force-clock
kill -SIGUSR2 $(pidof dunst) 
