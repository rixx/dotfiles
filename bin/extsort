#! /bin/bash

set +e

sort_file () {
  if [ -f "$1" ]; then
    ext=$(file -b --mime-type "$1" | cut -d/ -f1)
    mkdir -p "$ext"
    mv "$1" "$ext/$1"
  fi
}

if [[ -n $1 ]]; then
  if [[ "$1" == *.part ]]; then
    exit
  fi
  if [[ -f $1 ]]; then
    cd "$(dirname "$1")" || exit
    sort_file "$(basename "$1")"
    exit
  elif [[ -d $1 ]]; then
    cd "$1" || exit
    for filename in ./*
    do
      sort_file "$filename"
    done
    exit
  fi
fi
