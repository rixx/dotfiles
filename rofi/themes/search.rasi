@import "./theme.rasi"

window {
    spacing: 20;
    width: 1000px;
}

mainbox {
    spacing: 10px;
    padding: 20px;
    children: [ "message", "inputbar", "listview" ];
}

inputbar {
    children: [ "textbox-prompt-colon", "entry" ];
}

textbox-prompt-colon {
    padding: 5px 0px;
    str: "";
}

entry {
    padding: 5px 0px;
    cursor: text;
    placeholder: "…";
}

listview {
    enabled: false;
}
